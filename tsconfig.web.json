{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "app/renderer/types/index.d.ts",
    "app/renderer/**/*",
    "app/shared/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // This config must be the same as in electron.vite.config
    "paths": {
      "@/*": ["./app/renderer/*"],
    }
  }
}
